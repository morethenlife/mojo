//- Все примеси в этом файле должны начинаться c имени блока (cart)

mixin cart(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +cart('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' cart--' + modsList[i].trim();
      }
    }

  .page-header__cart(class=allMods)&attributes(attributes)
    button.page-header__btn 3

