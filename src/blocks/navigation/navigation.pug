//- Все примеси в этом файле должны начинаться c имени блока (navigation)

mixin navigation(mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +navigation('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' navigation--' + modsList[i].trim();
      }
    }

  nav.page-header__nav(class=allMods)&attributes(attributes)
    h2.page-header__menu-title Меню
    ul.page-header__nav-list
      li.page-header__nav-item.active-link
        a.page-header__link Продукты
        ul.page-header__mob-list
          li.page-header__mob-item
            a.page-header__mob-link.active-link Шоколад
              sup 64
            ul.page-header__choco-list
              li.page-header__choco-item
                a.page-header__choco-link Все товары категории
              li.page-header__choco-item
                a.page-header__choco-link Молочный
              li.page-header__choco-item
                a.page-header__choco-link.active-link Горький
              li.page-header__choco-item
                a.page-header__choco-link Белый
              li.page-header__choco-item
                a.page-header__choco-link Веганский
          li.page-header__mob-item
            a.page-header__mob-link Пасты
          li.page-header__mob-item
            a.page-header__mob-link Конфеты
          li.page-header__mob-item
            a.page-header__mob-link Подарки
      li.page-header__nav-item.nav-item__mob-item
        a(href="#").page-header__link Корзина
          +cart
      li.page-header__nav-item
        a(href="store.html").page-header__link Магазины
      li.page-header__nav-item
        a(href="team.html").page-header__link Команда
      li.page-header__nav-item
        a.page-header__link Контакты
      li.page-header__nav-item
        a(href="press.html").page-header__link Пресса
