//- Все примеси в этом файле должны начинаться c имени блока (privacy)

mixin privacy(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +privacy('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' privacy--' + modsList[i].trim();
      }
    }

  .privacy(class=allMods)&attributes(attributes)
    .privacy__logo-wrapper
      +logo(false)
        img(src='img/logo.svg', alt='Logo', width='81', height='21')
    .privacy__wrapper
      h2.privacy__main-title Политика Конфиденциальности
      ul.privacy__list
