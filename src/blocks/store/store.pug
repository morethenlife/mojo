//- Все примеси в этом файле должны начинаться c имени блока (store)

mixin store(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +store('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' store--' + modsList[i].trim();
      }
    }

  .store(class=allMods)&attributes(attributes)
    .store__logo-wrapper
      +logo(false)
        img(src='img/logo.svg', alt='Logo', width='81', height='21')
